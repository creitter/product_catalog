<h1>Orders</h1>

<div class="pull-right welcome-btn">
  <%= link_to 'Back to Welcome Page', welcome_index_path, class:'btn btn-default btn-sm' %>
</div>

<p id="notice"><%= notice %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Street Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.street_address %></td>
        <td><%= order.city %></td>
        <td><%= order.state %></td>
        <td><%= order.zipcode %></td>
        <td><%= link_to 'Show', order %></td>
        <td class="small-column last-column"><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create a New Order", new_order_path, class:"btn btn-primary" %>