<%= form_for(@product, html: {class: 'product'}) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :description %> 
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :width %> (inches)
    <%= f.text_field :width, class: "form-control" %> 
  </div>
  <div class="form-group field">
    <%= f.label :length %> (inches)
    <%= f.text_field :length, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :height %> (inches)
    <%= f.text_field :height, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :weight %> (grams)
    <%= f.text_field :weight, class: "form-control" %> 
  </div>
  <div class="form-group field">
    <%= f.label :value %> (USD)
    <%= f.number_field :value, step: 'any', class: "form-control"%>
  </div>
  
  <div class="actions">
    <%= f.submit "Save Product", class: "btn btn-primary" %>
    <%= link_to 'Back', :back, class:'btn btn-default'%>
  </div>
<% end %>
